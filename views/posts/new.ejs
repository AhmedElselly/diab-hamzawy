<%-include('../partials/header')%>
<div class="container">
	<h1>منتج جديد</h1>
	<form action="/posts/new" method="POST" enctype="multipart/form-data">
		<div class="form-group">
			<label for="name">اسم المنتج</label>
			<input type="text" id="name" class="form-control" name="name" placeholder="اسم المنتج">
		</div>
		<div class="form-group">
			<label for="body">وصف المنتج</label>
			<textarea type="text" id="body" name="body" class="form-control" placeholder="Description"></textarea>
		</div>
		<div class="form-group">
			<label for="images">الصور</label>
			<input type="file" id="images" accept="images/*" class="form-control" name="images" multiple>
		</div>
		<div class="form-group">
			<label for="price">السعر</label>
			<input type="number" class="form-control" name="price" placeholder="السعر">
		</div>
		<div class="form-group">
			<label for="category">التصنيف</label>
			<select name="category" class="custom-select">
			  <option selected>اختر</option>
			  <%categories.map(category => {%>
			  	<option value="<%=category.name%>"><%=category.name%></option>
		  	  <%})%>
			  
			</select>
		</div>
		<button id="loading" class="btn btn-primary">إرسال</button>
	</form>
</div>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<script>
	CKEDITOR.replace( 'body' );
	const btn = document.querySelector('#loading');
	btn.addEventListener('click', function (e) {
		this.innerText = 'Loading...';
	})
</script>
<%-include('../partials/footer')%>